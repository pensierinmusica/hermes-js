{
  "name": "hermes-js",
  "version": "1.0.12",
  "description": "Universal action dispatcher for JavaScript apps",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:umd && npm run build:umd:min && npm run build:es",
    "build:es": "babel src --out-file dist/index.js",
    "build:umd": "rollup -c",
    "build:umd:min": "NODE_ENV=production rollup -c",
    "clean": "rimraf dist",
    "prepublish": "npm run lint && npm test && npm run clean && npm run build",
    "lint": "eslint src",
    "precommit": "npm run lint && npm test",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pensierinmusica/hermes-js.git"
  },
  "keywords": [
    "action",
    "ajax",
    "async",
    "asynchronous",
    "api",
    "dispatch",
    "event",
    "fetch",
    "flux",
    "functional",
    "http",
    "jquery",
    "middleware",
    "post",
    "promise",
    "reducer",
    "react",
    "react-native",
    "redux",
    "request",
    "rest",
    "socket",
    "thunk",
    "transaction",
    "websockets"
  ],
  "author": "Alessandro Zanardi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pensierinmusica/hermes-js/issues"
  },
  "homepage": "https://github.com/pensierinmusica/hermes-js#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.7.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
